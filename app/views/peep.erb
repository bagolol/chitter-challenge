<ul class='peep'>
  <div class="description">
    <%= peep.content %>
    <div class="peep_info">
      <span class="time">
        <% time = peep.created_at.strftime("%H:%M, %d/%m/%Y") %>
        added at <%= time %>
      </span>
      <span class="username">
        <% username = peep.user.username %>
        <a><%= username %></a>
      </span>
    </div>
  </div>
</ul>