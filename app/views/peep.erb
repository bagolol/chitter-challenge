<li class='peep'>
  <div class="description">
    <%= peep.content %>
  </div>
    <span class='time'>
      <% time = peep.created_at.strftime("%H:%M, %d/%m/%Y") %>
      added at <%= time %>
    </span>
    <span class='username' style="color:#587DCC">
      <% username = peep.user.username %>
      <a><%= username %></a>
    </span>
</li>